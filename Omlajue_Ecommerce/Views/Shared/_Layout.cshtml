<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Omlajue | Luxury Watches</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/images/favicon.ico">

    <!-- Google Fonts - Montserrat, Poppins, Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Premium Global Design System -->
    <link href="~/Content/css/premium-global.css?v=1.0" rel="stylesheet" />
    
    <!-- Luxury Redesign CSS -->
    <link href="~/Content/css/luxury-redesign.css?v=1.0" rel="stylesheet" />

    <!-- Custom CSS - Modern Design System with cache busting -->
    <link href="~/Content/css/modern.css?v=2.0" rel="stylesheet" />
    <link href="~/Content/css/site.css?v=2.0" rel="stylesheet" />
    <link href="~/Content/css/hover-fix.css?v=1.0" rel="stylesheet" />
    <link href="~/Content/css/landing-page.css?v=1.0" rel="stylesheet" />

    @RenderSection("styles", required: false)

    <style>
        /* Promotional Top Banner */
        .promo-banner {
            background: linear-gradient(135deg, #0D0D0D 0%, #1A1A1A 100%);
            padding: 8px 0;
            border-bottom: 1px solid rgba(212, 175, 55, 0.2);
            font-size: 0.8rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            color: #D4AF37;
            position: relative;
            overflow: hidden;
        }

        .promo-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
            animation: shimmer 3s infinite;
        }

        .promo-banner .promo-text {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }

        .promo-banner .promo-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #E8E8E8;
        }

        .promo-banner .promo-item i {
            color: #D4AF37;
            font-size: 0.9rem;
        }

        .promo-banner .promo-item .highlight {
            color: #D4AF37;
            font-weight: 600;
        }

        .promo-banner .promo-separator {
            color: rgba(212, 175, 55, 0.4);
            font-weight: 300;
        }

        /* Remove underline from Collections dropdown */
        .navbar-nav .nav-item.dropdown .nav-link.dropdown-toggle {
            border-bottom: none !important;
        }

        /* Active navbar link indicator */
        .navbar-nav .nav-item .nav-link {
            position: relative;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-item .nav-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            transform: translateX(-50%) scaleX(0);
            width: 80%;
            height: 2px;
            background: var(--primary-color, #000);
            transition: transform 0.3s ease;
        }

        .navbar-nav .nav-item .nav-link.active::after,
        .navbar-nav .nav-item .nav-link:hover::after {
            transform: translateX(-50%) scaleX(1);
        }

        .navbar-nav .nav-item .nav-link.active {
            color: var(--primary-color, #000);
            font-weight: 500;
        }

        /* Remove margin from body and main */
        body {
            margin: 0;
            padding: 0;
        }

        main {
            margin: 0;
            padding: 0;
        }

        /* Sticky navbar adjustments */
        .navbar.sticky-top {
            top: 0;
        }

        .promo-banner+ .navbar {
            margin-top: 0 !important;
        }
    </style>
</head>

<body>
    <!-- Promotional Top Banner -->
    <div class="promo-banner">
        <div class="container">
            <div class="promo-text">
                <div class="promo-item">
                    <i class="fas fa-shipping-fast"></i>
                    <span>Free Shipping on Orders Over <span class="highlight">₱50,000</span></span>
                </div>
                <span class="promo-separator">|</span>
                <div class="promo-item">
                    <i class="fas fa-tag"></i>
                    <span>Up to <span class="highlight">40% OFF</span> on Selected Models</span>
                </div>
                <span class="promo-separator">|</span>
                <div class="promo-item">
                    <i class="fas fa-shield-alt"></i>
                    <span><span class="highlight">100%</span> Authentic Guaranteed</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top" style="margin-bottom: 0;">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <span class="brand-logo">OMLAJUE</span>
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")" data-section="hero">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Collections
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("List", "Product", new { gender = "Men" })">Men's
                                    Watches</a>
                            </li>
                            <li><a class="dropdown-item" href="@Url.Action("List", "Product", new { gender = "Women" })">Women's
                                    Watches</a>
                            </li>
                            <li><a class="dropdown-item" href="@Url.Action("List", "Product", new { minPrice = 100000 })">Luxury</a>
                            </li>
                            <li><a class="dropdown-item" href="@Url.Action("List", "Product", new { categoryId = 2 })">Sports</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("List", "Product")">View All</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                </ul>

                <!-- User Actions -->
                <ul class="navbar-nav align-items-center">
                    @if (Session["UserId"] != null)
                    {
                    <li class="nav-item me-2">
                        <a class="nav-link position-relative" href="@Url.Action("Index", "Wishlist")" title="Wishlist">
                            <i class="far fa-heart fa-lg"></i>
                            <span class="cart-badge" id="wishlistBadge" style="display:none;">0</span>
                        </a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link position-relative" href="@Url.Action("Index", "Cart")" title="Shopping Cart">
                            <i class="fas fa-shopping-bag fa-lg"></i>
                            <span class="cart-badge" id="cartBadge" style="display:none;">0</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                            data-bs-toggle="dropdown">
                            <i class="far fa-user-circle fa-lg me-2"></i>
                            <span>@Session["UserName"]</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i
                                        class="far fa-user me-2"></i>My Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("OrderHistory", "Account")"><i
                                        class="fas fa-box me-2"></i>My Orders</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Wishlist")"><i
                                        class="far fa-heart me-2"></i>Wishlist</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
                            {
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Admin")"><i
                                        class="fas fa-cog me-2"></i>Admin Panel</a></li>
                            <li><hr class="dropdown-divider"></li>
                            }
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i
                                        class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary btn-sm px-4" href="@Url.Action("Login", "Account")">
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm px-4" href="@Url.Action("Register", "Account")">Register</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
    <div class="container" style="margin-top: 1rem;">
        @if (TempData["Success"] != null)
        {
        <div class="alert alert-success alert-dismissible fade show animate-fade-in" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        }
        @if (TempData["Error"] != null)
        {
        <div class="alert alert-danger alert-dismissible fade show animate-fade-in" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        }
    </div>
    }

    <!-- Main Content -->
    <main class="animate-fade-in">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <!-- About Section -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="mb-3">OMLAJUE</h5>
                    <p style="color: var(--gray); line-height: 1.8;">
                        Your destination for authentic luxury watches. We offer a curated collection of the world's finest
                        timepieces from prestigious brands.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-white"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("List", "Product")">Shop</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")">About Us</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    </ul>
                </div>

                <!-- Collections -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="mb-3">Collections</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("List", "Product", new { gender = "Men" })">Men's</a></li>
                        <li class="mb-2"><a href="@Url.Action("List", "Product", new { gender = "Women" })">Women's</a></li>
                        <li class="mb-2"><a href="@Url.Action("List", "Product", new { minPrice = 100000 })">Luxury</a></li>
                        <li class="mb-2"><a href="@Url.Action("List", "Product", new { categoryId = 2 })">Sports</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="mb-3">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("PrivacyPolicy", "Home")">Privacy Policy</a></li>
                        <li class="mb-2"><a href="@Url.Action("TermsAndConditions", "Home")">Terms</a></li>
                        <li class="mb-2"><a href="@Url.Action("OrderHistory", "Account")">Track Order</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")">Help</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="mb-3">Contact</h6>
                    <ul class="list-unstyled" style="color: var(--gray); font-size: 0.875rem;">
                        <li class="mb-2"><i class="fas fa-phone me-2"></i>+63 123 456 7890</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i>info@omlajue.com</li>
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Manila, PH</li>
                    </ul>
                </div>
            </div>

            <hr style="border-color: rgba(255,255,255,0.1); margin: 2rem 0;">

            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p style="color: var(--gray); margin: 0;">&copy; @DateTime.Now.Year Omlajue. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small style="color: var(--gray);">Secure Payment Methods</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/site.js"></script>

    <!-- Update Cart and Wishlist Count -->
    @if (Session["UserId"] != null)
    {
        <script>
            $(document).ready(function() {
                updateCartCount();
                updateWishlistCount();

                // Add scroll effect to navbar
                $(window).scroll(function() {
                    if ($(window).scrollTop() > 50) {
                        $('nav.navbar').addClass('scrolled');
                    } else {
                        $('nav.navbar').removeClass('scrolled');
                    }

                    // Update active nav link based on scroll position
                    updateActiveNavLink();
                });

                // Initial check
                updateActiveNavLink();
            });

            function updateActiveNavLink() {
                var scrollPos = $(window).scrollTop() + 100;

                // Get all sections
                var sections = $('section');
                var navLinks = $('.navbar-nav .nav-item .nav-link[data-section]');

                sections.each(function() {
                    var section = $(this);
                    var sectionTop = section.offset().top;
                    var sectionBottom = sectionTop + section.outerHeight();
                    var sectionClass = section.attr('class').split(' ')[0];

                    if (scrollPos >= sectionTop && scrollPos < sectionBottom) {
                        navLinks.removeClass('active');
                        $('.navbar-nav .nav-item .nav-link[data-section="' + sectionClass + '"]').addClass('active');
                    }
                });
            }

            function updateCartCount() {
                $.get('@Url.Action("Count", "Cart")', function(data) {
                    if (data.count > 0) {
                        $('#cartBadge').text(data.count).show();
                    } else {
                        $('#cartBadge').hide();
                    }
                });
            }

            function updateWishlistCount() {
                $.get('@Url.Action("Count", "Wishlist")', function(data) {
                    if (data.count > 0) {
                        $('#wishlistBadge').text(data.count).show();
                    } else {
                        $('#wishlistBadge').hide();
                    }
                });
            }

            // Make functions global
            window.updateCartCount = updateCartCount;
            window.updateWishlistCount = updateWishlistCount;
        </script>
    } else {
        <script>
            $(document).ready(function() {
                // Add scroll effect to navbar
                $(window).scroll(function() {
                    if ($(window).scrollTop() > 50) {
                        $('nav.navbar').addClass('scrolled');
                    } else {
                        $('nav.navbar').removeClass('scrolled');
                    }

                    // Update active nav link based on scroll position
                    updateActiveNavLink();
                });

                // Initial check
                updateActiveNavLink();
            });

            function updateActiveNavLink() {
                var scrollPos = $(window).scrollTop() + 100;

                // Get all sections
                var sections = $('section');
                var navLinks = $('.navbar-nav .nav-item .nav-link[data-section]');

                sections.each(function() {
                    var section = $(this);
                    var sectionTop = section.offset().top;
                    var sectionBottom = sectionTop + section.outerHeight();
                    var sectionClass = section.attr('class').split(' ')[0];

                    if (scrollPos >= sectionTop && scrollPos < sectionBottom) {
                        navLinks.removeClass('active');
                        $('.navbar-nav .nav-item .nav-link[data-section="' + sectionClass + '"]').addClass('active');
                    }
                });
            }
        </script>
    }

    @RenderSection("scripts", required: false)
</body>

</html>
