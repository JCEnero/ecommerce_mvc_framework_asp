<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Omlajue Admin</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/images/favicon.ico">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Admin Custom CSS -->
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3>OMLAJUE</h3>
                <p class="text-muted">Admin Panel</p>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Admin" ? "active" : "")">
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Admin" && ViewContext.RouteData.Values["action"].ToString().Contains("Product") ? "active" : "")">
                    <a href="#productsSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                        <i class="fas fa-box me-2"></i>Products
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <ul class="collapse list-unstyled" id="productsSubmenu">
                        <li><a href="@Url.Action("Products", "Admin")">All Products</a></li>
                        <li><a href="@Url.Action("CreateProduct", "Admin")">Add New Product</a></li>
                    </ul>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString().Contains("Order") ? "active" : "")">
                    <a href="@Url.Action("Orders", "Admin")">
                        <i class="fas fa-shopping-cart me-2"></i>Orders
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString().Contains("Payment") ? "active" : "")">
                    <a href="@Url.Action("Payments", "Admin")">
                        <i class="fas fa-credit-card me-2"></i>Payments
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString().Contains("Categories") ? "active" : "")">
                    <a href="@Url.Action("Categories", "Admin")">
                        <i class="fas fa-th-large me-2"></i>Categories
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString().Contains("Brands") ? "active" : "")">
                    <a href="@Url.Action("Brands", "Admin")">
                        <i class="fas fa-tag me-2"></i>Brands
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString().Contains("Users") ? "active" : "")">
                    <a href="@Url.Action("Users", "Admin")">
                        <i class="fas fa-users me-2"></i>Customers
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light btn-sm w-100 mb-2">
                    <i class="fas fa-globe me-2"></i>View Website
                </a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-sm w-100">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark admin-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-dark">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="far fa-user-circle me-2"></i>@Session["UserName"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Alert Messages -->
            <div class="container-fluid mt-3">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            </div>

            <!-- Main Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Admin Custom JS -->
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
