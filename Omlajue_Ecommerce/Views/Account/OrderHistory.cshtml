@model List<Omlajue_Ecommerce.Models.Order>
@{
    ViewBag.Title = "Order History";
}

<div class="container mt-4">
    <h2>Order History</h2>
    
    @if (Model != null && Model.Any())
    {
        foreach (var order in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Order #@order.OrderNumber</strong>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge bg-primary">@order.OrderStatus</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p><strong>Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Total:</strong> ?@order.TotalAmount.ToString("N2")</p>
                    <a href="@Url.Action("OrderDetails", "Account", new { id = order.OrderId })" class="btn btn-primary btn-sm">View Details</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <p>You haven't placed any orders yet.</p>
            <a href="@Url.Action("List", "Product")" class="btn btn-primary">Start Shopping</a>
        </div>
    }
</div>
